{%- if section.settings.video_url != blank -%}
  <div class="video-wrapper">

    {{ section.settings.video_url }}

    <p>{{ section.settings.video_text }}</p>
  </div>
{%- endif -%}

{% schema %}
  {
    "name": "Video Section",
    "settings": [
      {
        "type": "text",
        "id": "video_url",
        "label": "Video URL",
        "default": ""
      }, {
        "type": "text",
        "id": "video_text",
        "label": "Video Text",
        "default": "..."
      }
    ]
  }
{% endschema %}